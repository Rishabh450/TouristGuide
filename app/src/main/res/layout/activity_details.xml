<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="12dp">

            <TextView
                android:id="@+id/fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" City Details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp">

            <HorizontalScrollView
                android:id="@+id/horizontalscrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/tab1"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_centerInParent="true"
                            android:alpha="0.78"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_places" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/tab2"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_centerInParent="true"
                            android:alpha="0.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_train" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/tab3"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_centerInParent="true"
                            android:alpha="0.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_bus" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/tab4"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_centerInParent="true"
                            android:alpha="0.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_hospital" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/tab5"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_centerInParent="true"
                            android:alpha="0.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_hotel" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/tab6"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_centerInParent="true"
                            android:alpha="0.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_person_female" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                        <ImageView
                                android:id="@+id/tab7"
                                android:layout_width="96px"
                                android:layout_height="96px"
                                android:layout_centerInParent="true"
                                android:alpha="0.3"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_education" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                        <ImageView
                                android:id="@+id/tab8"
                                android:layout_width="96px"
                                android:layout_height="96px"
                                android:layout_centerInParent="true"
                                android:alpha="0.3"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_home" />

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.TabLayout
            android:id="@+id/details_tablayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.0" />

        <android.support.v4.view.ViewPager
            android:id="@+id/details_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.94" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_cacheStrategy="strong"
        app:lottie_fileName="loading.json"
        app:lottie_imageAssetsFolder="images"
        app:lottie_loop="true" />

</RelativeLayout>